            <kind>1</kind>
            <string>//Inputs
keyLeft = keyboard_check(vk_left);
keyRight = keyboard_check(vk_right);
keyJump = keyboard_check(vk_up);
keyDuck = keyboard_check(vk_down);

//cancelar input
if(hit &gt; 0){
    keyLeft = 0;
    keyRight = 0;
}

//Gravedad
if (vSpeed &lt; 10)
    vSpeed += grav;

//Movimiento
move = keyRight - keyLeft;

//si no ha sido golpeado -&gt; se mueve
if(hit == 0){
    hSpeed = move * movSpeed;
}

//Hit -&gt; resetea el contador de golpeo
if(hit &gt; 0){
    hit -= (1/room_speed);
}

//Agacharse
if(keyDuck &amp;&amp; sprite_index != sprPlayerLowKick &amp;&amp; sprite_index != sprPlayerLowPunch){
    sprite_index = sprPlayerDuck;
}

//Salto
if (place_meeting(x, y + 1, objBlock))
{
    vSpeed = keyJump * -jumpSpeed;
    if(keyJump != 0){
        sprite_index = sprPlayerJump;
        grounded = false;
    }
}

//Colisiones
if (place_meeting(x + hSpeed, y, objBlock))
{
    /*while !(place_meeting(x + sign(hSpeed), y, objBlock))
    {
        x += sign(hSpeed);
    }*/
    hSpeed = 0;
}
//x += hSpeed;

if (place_meeting(x, y + vSpeed, objBlock))
{
    if(sprite_index == sprPlayerJump){
        sprite_index = sprPlayerTest;
    }
    vSpeed = 0;
    grounded = true;
    airHit = true;
}

//Knockback
if(place_meeting(x + hSpeed, y, objEnemyBase) &amp;&amp; hit == 0){
    enemy = instance_place(x + hSpeed,y,objEnemyBase);
    if(enemy.alive){
        hSpeed = -sign(hSpeed)*4;
        life -= 1;
        if(grounded){
            vSpeed = -4;
            hit = 0.4
        }
        else{
            hit = 0.3;
        }
    }
    //hSpeed = 0;
}

//Enemy knockback
if(place_meeting(x + hSpeed, y, objEnemyTest) &amp;&amp; hit != 0){
    enemy = instance_place(x + hSpeed,y,objEnemyTest);
    if(enemy.alive){
        if(airHit){
            enemy = instance_place(x + hSpeed,y,objEnemyTest);
            enemy.hSpeed = sign(hSpeed)*4;
            enemy.vSpeed = -4;
            airHit = false;
        }
        else{
            hSpeed = 0;
            vSpeed = 0;
        }
    }
}

x += hSpeed;
y += vSpeed;

//Direcci√≥n
if(move != 0 &amp;&amp; move != dir){
    dir = move;
    if(dir &gt; 0){
        image_xscale = 1;
    }
    else{
        image_xscale = -1;
    }
}

if(hSpeed != 0 &amp;&amp; grounded){
    sprite_index = sprPlayerRun;
}

if(sprite_index == sprPlayerRun &amp;&amp; hSpeed == 0){
    sprite_index = sprPlayerTest;
}


//Patada
if(keyboard_check_pressed(ord('Z'))){
    if(keyDuck){
        sprite_index = sprPlayerLowKick;
        with(instance_create(x,y,objLowKickHbox)){
            image_xscale = other.image_xscale;
        }
    }
    else{
        sprite_index = sprPlayerKick;
        with(instance_create(x,y,objKickHbox)){
            image_xscale = other.image_xscale;
        }
    }
}

if(keyboard_check_pressed(ord('X'))){
    if(keyDuck){
        sprite_index = sprPlayerLowPunch;
        with(instance_create(x,y,objLowPunchHbox)){
            image_xscale = other.image_xscale;
        }
    }
    else{
        sprite_index = sprPlayerPunch;
        with(instance_create(x,y,objPunchHbox)){
            image_xscale = other.image_xscale;
        }
    }
}



